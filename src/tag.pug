extends /base.pug

block main
  .Stack.-large
    .Stack.-small
      h1.Heading
        span.WithIcon.-tag=tag.title
      p=tag.content

    .Stack.-large
      if collections[tag.title]
        each reference in collections[tag.title].slice().reverse()
          article.Stack.-small(id=reference.fileSlug)
            h2.ItemTitle
              a.WithIcon.-reference(href=reference.data.link)=reference.data.title
            !=reference.templateContent
