doctype xml
rss(version='2.0',
    xmlns:atom='http://www.w3.org/2005/Atom',
    xmlns:content='http://purl.org/rss/1.0/modules/content/',
    xmlns:creativeCommons='http://blogs.law.harvard.edu/tech/creativeCommonsRssModule')
  channel
    title=accrefs.title
    link=accrefs.url
    description=('<![CDATA[Webアクセシビリティ関連の資料まとめ]]>')
    language ja-JP
    pubdate=(new Date())
    lastbuilddate=(new Date())
    docs http://blogs.law.harvard.edu/tech/rss
    generator Node.js v12.7.0
    managingeditor @otiext
    webmaster @magi1125
    atom:link(href=`${accrefs.url}feed.xml`, rel='self', type='application/rss+xml')/

    each post, i in posts
      - if (!post) return
      item
        title=post.title
        link=post.link
        each tag, i in post.tags
          category=tag
        content:encoded=('<![CDATA['+post.body+']]>')
